<resources>

   <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#3D937E</item>
     <item name="android:height">48dip</item>
    </style>

<color name="windowBackground">#ffffff</color>


  <style name="Theme.Splash" parent="android:Theme" >
   <item name="android:windowBackground">@drawable/icon</item>
    <item name="android:colorBackground">@android:color/white</item>
    <item name="android:windowNoTitle">true</item>

  </style>



  <style name="MyTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
  <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
   <item name="android:actionBarStyle">@style/MyActionBar</item>
   <item name="android:windowBackground">@color/accentColor</item>
   <item name="android:icon">@android:color/transparent</item>

  </style>

  <style name="MyThemeNormal" parent="@android:style/Theme.Holo.Light.DarkActionBar">
  <item name="android:windowTranslucentStatus">false</item>
    <item name="android:windowTranslucentNavigation">true</item>
   <item name="android:actionBarStyle">@style/MyActionBar</item>
   <item name="android:windowBackground">@color/backgroundcolor</item>
   <item name="android:icon">@android:color/transparent</item>

  </style>



</resources>